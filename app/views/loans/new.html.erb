<h2>
  Amortization Schedule Calculator
</h2><br>
<div class="new-loan-div">
  <div class="new-loan-form">

    <%= form_for @loan do |f| %>
    <%= render 'shared/error_messages', object: @loan  %>
    <%= f.label :loan_amount %><br>
    <%= f.text_field :loan_amount, class: 'form-control' %>

    <%= f.label :term %><br>
    <%= f.text_field :term, class: 'form-control' %>

    <%= f.label :interest_rate %><br>
    <%= f.text_field :interest_rate, class: 'form-control' %>

    <%= f.label :amortization_type %><br>
    <%= f.select :amortization_type, options_for_select(Loan::VALID_AMORTIZATION_TYPE.each {|type|}), class: 'form-control' %><br>

    <%= f.label :request_date %><br>
    <%=  f.text_field :request_date, class: 'datepicker' %><br>

    <%= f.submit "Generate Amortization schedule", class: "btn btn-primary"  %>

    <% end %>
  </div>
</div>
